<div class="text-center">
  <h1 class="h4 text-gray-900 mb-4">Change your password</h1>
</div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'user' }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="form-group">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <div class="form-group">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control form-control-user', placeholder: "Enter New Password" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-user', placeholder: "Enter New Password" %>
  </div>
  <%= f.submit "Change my password", class: 'btn btn-primary btn-user btn-block' %>
  <hr>
<% end %>
<%= render "users/shared/links" %>
